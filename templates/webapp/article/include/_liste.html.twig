<div class="table-responsive">
    <table class="table align-middle">
        <thead>
        <tr>
            <th class="d-none d-sm-table-cell"></th>
            <th>Titre</th>
            <th>Auteur</th>
            <th class="d-none d-sm-table-cell">Description</th>
            <th class="d-none d-sm-table-cell">Catégorie</th>
            <th class="d-none d-sm-table-cell">Créer le</th>
            <th>Modifier le</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td class="d-none d-sm-table-cell"><input type="checkbox"></td>
                <td><strong><a href="{{ path('op_webapp_article_edit', {'id': article.id}) }}">{{ article.title }}</a></strong></td>
                <td>{{ article.author}}</td>
                <td class="d-none d-sm-table-cell">{{ article.description }}</td>
                <td class="d-none d-sm-table-cell">{{ article.category }}</td>
                <td class="d-none d-sm-table-cell">{{ article.createdAt ? article.createdAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
                <td>
                    <a href="{{ path('op_webapp_article_show', {'id': article.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('op_webapp_article_edit', {'id': article.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>