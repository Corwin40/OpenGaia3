                {{ include('webapp/article/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-md-10 col-lg-10 col-xl-10 col-xxl-10">
                <div class="card">
                    <div class="card-header">
                        <h3>Cr√©er une page</h3>
