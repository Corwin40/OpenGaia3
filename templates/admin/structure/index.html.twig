{% extends 'admin.html.twig' %}

{% block title %}Structure index{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.onload = function(){
            var AddCollaborator = document.getElementById('AddCollaborator');
            AddCollaborator.addEventListener('show.bs.modal', function (event){
                var button = event.relatedTarget;
                var structure = button.getAttribute('data-bs-whatever');
            };
        };
    </script>
{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('admin/structure/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('admin/structure/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Liste des structure : Entreprise, société, ...</h4>
                        <p>Créer, Modifier ou supprimer des membre du site.</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Structure</th>
                                    <th>Gérant</th>
                                    <th>Adressse</th>
                                    <th>Site web</th>
                                    <th>Email</th>
                                    <th>Bureau</th>
                                    <th>Mobile</th>
                                    <th>Collaborateur</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for structure in structures %}
                                <tr>
                                    <td>{{ structure.name }}</td>
                                    <td>{{ structure.respFirstName }} {{ structure.respLastName }}</td>
                                    <td>
                                        {{ structure.address }}<br>
                                        {{ structure.complement }}<br>
                                        {{ structure.zipcode }} {{ structure.city }}
                                    </td>
                                    <td>{{ structure.urlWeb }}</td>
                                    <td>{{ structure.EmailStruct }}</td>
                                    <td>{{ structure.phoneDesk }}</td>
                                    <td>{{ structure.phoneGsm }}</td>
                                    <td>
                                        {% if structure.collaborators|length > 0 %}
                                            {% for collaborator in structure.collaborators %}
                                                {{ structure.collaborators.firstname }} {{ structure.collaborators.firstname }}
                                            {% endfor %}
                                        {% else %}
                                            <a href="#" id="btnAddCollaborator" data-bs-toggle="modal" data-bs-target="#AddCollaborator" data-bs-whatever="{{ structure }}">Ajouter</a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('op_admin_structure_show', {'id': structure.id}) }}">show</a>
                                        <a href="{{ path('op_admin_structure_edit2', {'id': structure.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-sm btn-primary" href="{{ path('op_admin_structure_new2') }}">Ajouter une nouvelle structure</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


{% endblock %}
