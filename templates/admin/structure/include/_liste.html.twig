<table class="table">
    <thead>
    <tr>
        <th>Structure</th>
        <th class="d-none d-sm-table-cell">GÃ©rant</th>
        <th class="d-none d-sm-table-cell">Adresse</th>
        <th class="d-none d-sm-table-cell">Site web</th>
        <th class="d-none d-sm-table-cell">Email</th>
        <th class="d-none d-sm-table-cell">Bureau</th>
        <th class="d-none d-sm-table-cell">Mobile</th>
        <th>Collaborateur</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for structure in structures %}
        <tr>
            <td>{{ structure.name }}</td>
            <td class="d-none d-sm-table-cell">{{ structure.respFirstName }} {{ structure.respLastName }}</td>
            <td class="d-none d-sm-table-cell">
                {{ structure.address }}<br>
                {{ structure.complement }}<br>
                {{ structure.zipcode }} {{ structure.city }}
            </td>
            <td class="d-none d-sm-table-cell">{{ structure.urlWeb }}</td>
            <td class="d-none d-sm-table-cell">{{ structure.EmailStruct }}</td>
            <td class="d-none d-sm-table-cell">{{ structure.phoneDesk }}</td>
            <td class="d-none d-sm-table-cell">{{ structure.phoneGsm }}</td>
            <td>
                {% if structure.collaborators|length > 0 %}
                    {% for collaborator in structure.collaborators %}
                        <a href="{{ path('op_admin_collaborator_edit', {'id': collaborator.id}) }}">{{ collaborator.firstname }} {{ collaborator.lastname }}</a>
                    {% endfor %}
                {% else %}
                    <a href="#" id="btnAddCollaborator" data-bs-toggle="modal" data-bs-target="#AddCollaborator" data-bs-whatever="{{ structure.id }}">Ajouter</a>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('op_admin_structure_show', {'id': structure.id}) }}">show</a>
                <a href="{{ path('op_admin_structure_edit2', {'id': structure.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="11">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>