{% extends 'admin.html.twig' %}

{% block title %}Collaborator index{% endblock %}

{% block content %}
    <h1>Collaborator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>AvatarName</th>
                <th>AvatarSize</th>
                <th>PhoneDesk</th>
                <th>PhoneGsm</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collaborator in collaborators %}
            <tr>
                <td>{{ collaborator.id }}</td>
                <td>{{ collaborator.firstName }}</td>
                <td>{{ collaborator.lastName }}</td>
                <td>{{ collaborator.email }}</td>
                <td>{{ collaborator.avatarName }}</td>
                <td>{{ collaborator.avatarSize }}</td>
                <td>{{ collaborator.phoneDesk }}</td>
                <td>{{ collaborator.phoneGsm }}</td>
                <td>{{ collaborator.createdAt ? collaborator.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ collaborator.updatedAt ? collaborator.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('op_admin_collaborator_show', {'id': collaborator.id}) }}">show</a>
                    <a href="{{ path('op_admin_collaborator_edit', {'id': collaborator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
