{% extends 'admin.html.twig' %}

{% block title %}OpenGaia | Administration{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>
        window.onload = function(){
            ClassicEditor
                .create(document.querySelector('#event_description'), {
                    toolbar: [ 'heading','bold', 'italic', 'bulletedList', 'numberedList', 'blockQuote' ],
                    height: 50
                })
                .catch(error => {
                    console.error(error);
                });

            // mise en place du datapicker flatpickr sur les champs de date
            flatpickr(".flatpickr", {
                "locale": "fr",
                enableTime: true,
                altFormat: "j F Y",
                dateFormat: "d/m/Y",
            });

            // mise en place du datapicker flatpickr sur les champs de date
            flatpickr(".flatpickrtime", {
                "locale": "fr",
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true
            });
        }

        // function definition de l'orientation de l'image
        function onClickimgOrient(event){
            event.preventDefault();
            const url = this.href;
            const icone = this.querySelector('i');
            axios
                .post(url)
                .then(function(response){
                    if(icone.classList.contains('text-muted')) {
                        icone.classList.replace('text-muted', 'text-primary');
                        icone.classList.replace('text-primary', 'text-muted');
                    };
                });
        }

        // Ajout d'un event sur le click portrait ou paysage
        document.querySelectorAll('a.img-orientation').forEach(function (link){
            link.addEventListener('click', onClickimgOrient);
        })

    </script>
{%  endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('gest_app/event/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-lg-2 col-xl-2 col-xxl-2">
                {{ include('gest_app/event/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-lg-10 col-xl-10 col-xxl-10">
                <div class="card">
                    <div class="card-header">
                        <h3>Modifier un évènement</h3>
                    </div>
                    {{ include('gest_app/event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}