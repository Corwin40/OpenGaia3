{% if events|length <= 2 %}
<div class="row justify-content-center">
    {% for event in events %}
        <div class="col-12 col-sm-6 col-md-4 col-xl-2 col-xxl-2">
            <div id="member-card" class="card">
                {% if event.visuelName is not null %}
                    <img src="{{ vich_uploader_asset(event, 'visuelFile', 'App\\Entity\\GestApp\\Event')|imagine_filter('history_event') }}" class="card-img" alt="{{ event.name }}">
                {% else %}
                    <img src="{{ asset('images/png/Modèle_Evenement.png')}}" class="card-img" alt="none-visuel" style="width:194px;height:130px">
                {% endif %}
                <div class="card-img-overlay">
                    <div class="align-self-center">
                        <a href="{{ path('op_gestapp_eventgal_eventgalpublish', {'idevent': event.id}) }}">{{ event.name }}</a>
                    </div>
                </div>
                <a href="{{ path('op_gestapp_eventgal_eventgalpublish', {'idevent': event.id}) }}" class="stretched-link"></a>
            </div>
        </div>
    {% else %}
        <div class="col-xs-12 col-sm-6 col-md-4 col-xl-2 col-xxl-2">
            <p>Pas d'évènements publié</p>
        </div>
    {% endfor %}
</div>
{% else %}
<div class="row justify-content-center">
    <div class="flickity-button-white" data-flickity='{"resize":false, "pageDots": false,"cellAlign": "left", "wrapAround": true, "imagesLoaded": true}'>
        {% for event in events %}
            <div class="col-12 col-sm-6 col-md-4 col-xl-2 col-xxl-2 px-1">
                <div id="member-card" class="card">
                    {% if event.visuelName is not null %}
                        <img src="{{ vich_uploader_asset(event, 'visuelFile', 'App\\Entity\\GestApp\\Event')|imagine_filter('history_event') }}" class="card-img" alt="{{ event.name }}">
                    {% else %}
                        <img src="{{ asset('images/png/Modèle_Evenement.png')}}" class="card-img" alt="none-visuel" style="width:194px;height:130px">
                    {% endif %}
                    <div class="card-img-overlay">
                        <div class="align-self-center">
                            <a href="{{ path('op_gestapp_eventgal_eventgalpublish', {'idevent': event.id}) }}">{{ event.name }}</a>
                        </div>
                    </div>
                    <a href="{{ path('op_gestapp_eventgal_eventgalpublish', {'idevent': event.id}) }}" class="stretched-link"></a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}

